                <option selected disabled>Choose...</option>
                <option value="cardio">Cardiovascular</option>
                <option value="strength">Strength Training</option>
                <option value="flexibility">Flexibility/Yoga</option>
                <option value="balance">Balance</option>
                <option value="functional">Functional Fitness</option>
                <option value="sports">Sports/Recreation</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="mb-3">
              <label for="workout-duration" class="form-label">Duration (minutes)</label>
              <input type="number" class="form-control" id="workout-duration" min="1" max="300">
            </div>
            
            <div class="mb-3">
              <label for="workout-intensity" class="form-label">Intensity</label>
              <select class="form-select" id="workout-intensity">
                <option selected disabled>Choose...</option>
                <option value="low">Low - Could easily talk or sing</option>
                <option value="moderate">Moderate - Could talk but not sing</option>
                <option value="high">High - Could only say a few words at a time</option>
                <option value="very-high">Very High - Could not talk comfortably</option>
              </select>
            </div>
            
            <div class="mb-3">
              <label for="workout-notes" class="form-label">Notes</label>
              <textarea class="form-control" id="workout-notes" rows="2" placeholder="How did you feel? What went well? What could improve?"></textarea>
            </div>
            
