<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Set today's date in the mood tracker
    const today = new Date();
    const year = today.getFullYear();
    const month = String(today.getMonth() + 1).padStart(2, "0");
    const day = String(today.getDate()).padStart(2, "0");

    const formattedDate = `${year}-${month}-${day}`;
    document.getElementById("mood-date").value = formattedDate;

    // Add event listener for save button
    document.getElementById("save-mood").addEventListener("click", function () {
      // This is just a placeholder for future functionality
      alert(
        "This feature will be available soon! Your mood data would be saved."
      );
    });

    // Add event listener for calculate score button
    document
      .getElementById("calculate-score")
      .addEventListener("click", function () {
        // Get values from form
        const phq1 = parseInt(document.getElementById("phq-1").value) || 0;
        const phq2 = parseInt(document.getElementById("phq-2").value) || 0;
        const phq3 = parseInt(document.getElementById("phq-3").value) || 0;
        const phq4 = parseInt(document.getElementById("phq-4").value) || 0;
        const gad1 = parseInt(document.getElementById("gad-1").value) || 0;
        const gad2 = parseInt(document.getElementById("gad-2").value) || 0;

        // Calculate scores
        const phqScore = phq1 + phq2 + phq3 + phq4;
        const gadScore = gad1 + gad2;

        // Display result
        const resultElement = document.getElementById("score-result");
        resultElement.classList.remove(
          "d-none",
          "text-success",
          "text-warning",
          "text-danger"
        );

        let phqMessage, gadMessage, phqClass, gadClass;

        // PHQ-4 depression subscale interpretation
        if (phqScore <= 2) {
          phqMessage = "Depression: Minimal";
          phqClass = "text-success";
        } else if (phqScore <= 5) {
          phqMessage = "Depression: Mild";
          phqClass = "text-warning";
        } else {
          phqMessage = "Depression: Moderate-Severe";
          phqClass = "text-danger";
        }

        // GAD-2 anxiety subscale interpretation
        if (gadScore <= 1) {
          gadMessage = "Anxiety: Minimal";
          gadClass = "text-success";
        } else if (gadScore <= 3) {
          gadMessage = "Anxiety: Mild";
          gadClass = "text-warning";
        } else {
          gadMessage = "Anxiety: Moderate-Severe";
          gadClass = "text-danger";
        }

        resultElement.innerHTML = `<span class="${phqClass}">${phqMessage}</span><br><span class="${gadClass}">${gadMessage}</span><br><small>This is not a clinical diagnosis. If you scored in the moderate-severe range, consider speaking with a healthcare provider.</small>`;
        resultElement.classList.remove("d-none");
      });
  });
</script>
