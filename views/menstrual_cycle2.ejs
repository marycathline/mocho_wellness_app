    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 20px;
  }
  .symptom-item {
    padding: 8px 15px;
    background-color: #f0f0f0;
    border-radius: 20px;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  .symptom-item:hover {
    background-color: #e0e0e0;
  }
  .symptom-item.selected {
    background-color: var(--primary-color);
    color: white;
  }
  .cycle-stats {
    background-color: #f8f9fa;
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
  }
  .cycle-tip {
    background-color: rgba(142, 124, 195, 0.1);
    border-left: 4px solid var(--primary-color);
    padding: 15px;
