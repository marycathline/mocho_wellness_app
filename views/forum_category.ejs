<%- include('layout') %> <% title = category.name + " - Community Forum" %>

<style>
  .category-header {
    background-color: #f8f9fa;
    padding: 30px 0;
    margin-bottom: 30px;
    border-radius: 10px;
  }
  .post-item {
    padding: 15px;
    border-bottom: 1px solid #e1e1e1;
    transition: background-color 0.3s ease;
  }
  .post-item:hover {
    background-color: #f8f9fa;
  }
  .post-item:last-child {
    border-bottom: none;
  }
  .post-meta {
    font-size: 0.85rem;
    color: #6c757d;
  }
  .post-title {
    margin-bottom: 5px;
  }
  .post-counts {
    display: flex;
    align-items: center;
    font-size: 0.85rem;
    color: #6c757d;
    margin-top: 5px;
  }
  .post-counts span {
    margin-right: 15px;
    display: flex;
    align-items: center;
  }
  .post-counts i {
    margin-right: 5px;
  }
  .post-preview {
    color: #6c757d;
    margin-top: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  .create-post-btn {
    margin-bottom: 20px;
  }
  .no-posts {
    text-align: center;
    padding: 40px 0;
    color: #6c757d;
  }
</style>

<div class="container py-5">
  <div class="row category-header">
    <div class="col-md-8">
      <h1><%= category.name %></h1>
      <p class="lead"><%= category.description %></p>
    </div>
    <div class="col-md-4 text-md-end">
      <a href="/community/forum" class="btn btn-outline-secondary me-2">
        <i class="fas fa-arrow-left"></i> Back to Forum
      </a>
      <a
        href="/community/forum/new?category_id=<%= category.id %>"
        class="btn btn-primary create-post-btn"
      >
        <i class="fas fa-plus-circle"></i> Create New Post
      </a>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card">
        <div
          class="card-header d-flex justify-content-between align-items-center"
        >
          <h5 class="mb-0">Posts in <%= category.name %></h5>
          <div class="dropdown">
            <button
              class="btn btn-sm btn-outline-secondary dropdown-toggle"
              type="button"
              id="sortDropdown"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Sort by
            </button>
            <ul class="dropdown-menu" aria-labelledby="sortDropdown">
              <li><a class="dropdown-item" href="?sort=newest">Newest</a></li>
              <li>
                <a class="dropdown-item" href="?sort=popular">Most Popular</a>
              </li>
              <li>
                <a class="dropdown-item" href="?sort=comments">Most Comments</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="card-body p-0">
          <% if (posts && posts.length) { %> <% posts.forEach(function(post) {
          %>
          <div class="post-item">
            <h4 class="post-title">
              <a href="/community/forum/post/<%= post.id %>"
                ><%= post.title %></a
              >
            </h4>
            <div class="post-meta">
              Posted by <%= post.author.username %> on <%=
              post.created_at.format ? post.created_at.format('MMMM DD, YYYY') :
              post.created_at %>
            </div>
            <div class="post-counts">
              <span><i class="fas fa-eye"></i> <%= post.views %></span>
              <span
                ><i class="fas fa-comment"></i> <%= post.comments.length
                %></span
              >
              <span><i class="fas fa-heart"></i> <%= post.likes %></span>
            </div>
            <div class="post-preview">
              <%= typeof truncate === 'function' ? truncate(post.content, 150) :
              post.content.substring(0, 150) + '...' %>
            </div>
          </div>
          <% }); %> <% } else { %>
          <div class="no-posts">
            <i class="fas fa-comment-slash fa-3x mb-3"></i>
            <h5>No posts in this category yet</h5>
            <p>Be the first to start a discussion!</p>
            <a
              href="/community/forum/new?category_id=<%= category.id %>"
              class="btn btn-primary mt-2"
            >
              Create New Post
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
